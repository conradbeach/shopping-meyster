<!-- Parameters: list, item -->

<div class="collapsible-header">
  <%= link_to (render "shared/icon", name: "check"), item_path(item, completed: !item.completed), method: :patch %>
  <strong><%= item.name %> - </strong>
  <%= item.quantity %> |
  <%= number_to_currency(item.price) %>
  <%= link_to (render "shared/icon", name: "delete"), item_path(item), method: :delete, remote: true, class: "right" %>
</div>
<div class="collapsible-body">
  <span>
    <%= render "items/form", list: list, item: item %>
  </span>
</div>
