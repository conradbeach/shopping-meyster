<!-- Parmaters: list, item -->
<%= form_for item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :price %>
  $<%= f.number_field :price, step: 0.01 %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.hidden_field :list_id, value: list.id %>

  <%= f.submit class: ApplicationHelper::BUTTON_CLASS %>
<% end %>
