<h1>Register</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <%= render "shared/card", message: message, color: "red darken-4" %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Register", class: "btn waves-effect waves-light" %>
<% end %>

<p>Already have an account? <%= link_to "Login here.", login_path %></p>
